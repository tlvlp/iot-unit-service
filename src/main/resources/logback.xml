<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${SPRING_LOG_PATTERN}</pattern>
        </encoder>
    </appender>


    <root level="${SPRING_LOG_LEVEL}">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
